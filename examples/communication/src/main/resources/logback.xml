<configuration>

  <appender name="STDOUT"
    class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
          %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
     </pattern>
    </encoder>
  </appender>

  <logger name="one.microstream.communication" level="INFO" />
  
  <root level="ERROR">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>
